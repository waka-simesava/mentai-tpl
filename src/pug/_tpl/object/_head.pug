//- ----------------------------------------
//- Open Graph Protocol
//- ----------------------------------------

- const urlLast = site.rootUrl.slice( 0, -1 )
if pageOgpTitle
  meta( property="og:title" content=pageOgpTitle + ' | ' + site.sitename )
else
  meta(property="og:title" content=site.sitename)
meta( property="og:type" content=pageOgpType )
if pageOgpImage
  meta( property="og:image" content=urlLast + pageOgpImage )
else
  meta( property="og:image" content=urlLast + '/_assets/img/common/og-image.png' )
meta( property="og:url" content=site.rootUrl + pageUrl )
meta( property="og:description" content=pageDescription )
meta( property="og:site_name" content=site.sitename )
meta( property="og:locale" content=pageLang )

// BEGIN OGP Facebook insights
meta( property="fb:admins" content=site.fb_admins )
meta( property="fb:app_id" content=site.fb_app_id )
// END OGP Facebook insights

//BEGIN OGP Twitter Cards
meta( name="twitter:card" content=site.tw_card )
meta( name="twitter:site" content=site.tw_site )
// END OGP Twitter Cards
