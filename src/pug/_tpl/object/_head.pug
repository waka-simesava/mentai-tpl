//- ----------------------------------------
//- link
//- ----------------------------------------

block link
  link( rel="stylesheet" href="/_assets/css/theme.css" )
link( rel="shortcut icon" href="/_assets/img/favicon/favicon.ico" )
link( rel="apple-touch-icon" href="/_assets/img/common/og-image-lower.png" )
link( rel="canonical" href=site.rootUrl + pageUrl )


